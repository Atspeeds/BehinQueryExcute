@model BehinQueryApp.Service.QueyCommand.ViewModel.GetAll_QueryCommand_Query
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش Query: @Model.QueryCmd</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="QueryCmd" class="control-label">Query</label>
                    <textarea required="" type="text" class="form-control" asp-for="QueryCmd">
                 </textarea>

                </div>
            </div>


            <input type="hidden" asp-for="Id" value="@Model.Id" />
        </div>
    </div>

    <div class="modal-footer">
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
    </div>
</form>